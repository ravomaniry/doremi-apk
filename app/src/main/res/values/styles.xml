<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.noActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spacing4</item>
        <item name="android:paddingRight">@dimen/spacing4</item>
        <item name="android:drawablePadding">@dimen/spacing2</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="AppTheme.AccentButton" parent="AppTheme.PrimaryButton">
        <item name="android:background">@drawable/rounded_button_accent</item>
    </style>

    <style name="AppTheme.PrimaryIconButton" parent="android:style/MediaButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarSecondaryButton" parent="AppTheme.PrimaryIconButton">
        <item name="android:padding">@dimen/spacing2</item>
        <item name="android:layout_margin">@dimen/spacing1</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.MenuIconButton" parent="AppTheme.PrimaryIconButton">
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PlayButton" parent="android:style/MediaButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/play_button_background</item>
    </style>

    <style name="AppTheme.StopButton" parent="AppTheme.PlayButton">
        <item name="android:background">@drawable/stop_button_background</item>
    </style>


    <style name="AppTheme.WhiteIconButton" parent="AppTheme.PrimaryIconButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AppTheme.ColoredIconButton" parent="android:style/MediaButton">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.LegendText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:drawablePadding">@dimen/spacing2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing1</item>
    </style>

    <style name="AppTheme.Headline4" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Tab" parent="AppTheme.PrimaryButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawableTint">@color/gray</item>
    </style>
</resources>
